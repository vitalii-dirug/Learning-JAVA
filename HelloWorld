        if (Hello.equals(input1)) {
           System.out.println("Type world");
        } else {
            System.out.println("Please type Hello");
        }
// создал ввод для первого слова "Hello"
// как сделать так, что б строка ввода не исчезала
// пока юзер все таки не введет "Hello"?

        Scanner scanner2 = new Scanner (System.in);
        String input2 = scanner2.nextLine();

        if (Hello.equals(input1)) {
            System.out.println(Hello+World);
